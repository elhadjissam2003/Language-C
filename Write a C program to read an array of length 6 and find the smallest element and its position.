 #include <stdio.h>
#define AL 6
int main() {
  
  int n;
  int arr[AL];
  int min;
  int pos=0;
  int i ;
  printf("Input the length of the array :");
  scanf("%d",&n);
  printf("Input the array elements:\n",n);
  for(int i=0;i<n;i++){
      scanf("%d",&arr[i]);
  }
  for( i=0;i<n;i++){
      if(i==0){
          min=arr[i];
          
      }else{
          if(min >arr[i]){
              min=arr[i];
              break;
          }
      }

  }

      printf("Smallest value : %d\n",min);
            printf("Position of the element: %d\n",i);

  
  
  
  
    return 0;
}
